.image-cropper{
  background:rgba(14, 13, 13,.8);
  position: fixed;
  top:0;
  left:0;
  width:100vw;
  height:80vh;
  z-index: 1;
}
.main{
  position: absolute;
  width:100vw;
  height:80vh;
  overflow: hidden;
}
.content{
  z-index: 9;
  position: absolute;
  width:100vw;
  height:80vh;
  display: flex;
  flex-direction:column;
  pointer-events:none;
}
.bg_black{
  background: rgba(0, 0, 0, 0.8)!important;
}
.bg_gray{
  background: rgba(0, 0, 0, 0.45);
  transition-duration: .35s;
}
.content>.content_top{
  pointer-events:none;
}
.content>.content_middle{
  display: flex;
  height: 200px;
  width:100%;
}
.content_middle_middle{
  width:200px;
  box-sizing:border-box;
  position: relative;
  transition-duration: .3s;
}
.content_middle_right{
  flex: auto;
}
.content>.content_bottom{
  flex: auto;
}
.image-cropper .img{
  z-index: 2;
  top:0;
  left:0;
  position: absolute;
  border:none;
  width:100%;
  backface-visibility: hidden;
  transform-origin:center;
}
.image-cropper-canvas{
  position: fixed;
  background: white;
  width:150px;
  height:150px;
  z-index: 10;
  top:-200%;
  pointer-events:none;
}
.border{
  background-color: rgb(0, 145, 241);
  pointer-events:auto;
  position:absolute;
}
.border-top-left{
  left:0.5px;
  top:-2.5px;
  height:2.5px;
  width:33rpx;
}
.border-top-right{
  right:0.5px;
  top:-2.5px;
  height:2.5px;
  width:33rpx;
}
.border-right-top{
  top:-1px;
  width:2.5px;
  height:30rpx;
  right:0.5px;
}
.border-right-bottom{
  width:2.5px;
  height:30rpx;
  right:0.5px;
  bottom:-1px;
}
.border-bottom-left{
  height:2.5px;
  width:33rpx;
  bottom:-2.5px;
  left:0.5px;
}
.border-bottom-right{
  height:2.5px;
  width:33rpx;
  bottom:-2.5px;
  right:0.5px;
}
.border-left-top{
  top:-1px;
  width:2.5px;
  height:30rpx;
  left:0.5px;
}
.border-left-bottom{
  width:2.5px;
  height:30rpx;
  left:0.5px;
  bottom:-1px;
}
.selectView{
  background: white;
  width: 100%;
  height: 20vh;
  z-index: 98;
  position: absolute;
  bottom: 0px;
}
/* 按钮 */
.btn {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  text-align: center;
  overflow: hidden;
  position: absolute;
  margin-left: -65rpx;
  left: 50%;
  bottom: 40rpx;
  z-index: 99;
}
.btn  .bgc {
  width: 100%;
  height: 100%;
}
.btn .photo {
  width: 76rpx;
  height: 76rpx;
  position: absolute;
  top: 26rpx;
  left: 26rpx;
}
.close{
  color: #b1b1b1;
  font-size: 60rpx;
  position: absolute;
  bottom: 75rpx;
  margin-left: -65rpx;
  left: 20%;
}