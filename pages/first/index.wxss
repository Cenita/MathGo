.mask{
  position:fixed;
  width:100%;
  height:100%;
  background: #000000;
  opacity: 0.5;
  z-index: 100;
}
.Drawer{
  position:fixed;
  background:#fff;
  width:220px;
  height:100%;
  left:-220px;
  z-index: 200;
  color: #ffffff;
  border-top-right-radius: 30rpx;
  padding: 0 20rpx;
}
.top_img{
  width:60px;
  height:60px;
  background:#000000;
}
.item {
  width: 100%;
  height: 100rpx;
  border-bottom: 2rpx solid #eee;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.item text {
  height: 100rpx;
  line-height: 100rpx;
  color: #333;
}
.item image {
  margin-left: 20rpx;
  width: 50rpx;
  height: 50rpx;
  margin-right: 100rpx;
}

.box   {
  width: 100%;
  height: 100%;
  background-color: #308bff;
}
.langhua {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 300rpx;
}
.photo{
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
  background-color:rgba(76, 156, 255,1);
  margin: 160rpx auto;
  display: flex;
  flex-direction: column;
  text-align: center;
  animation-name: scaleDraw; /*关键帧名称*/
  animation-timing-function: ease-in-out; /*动画的速度曲线*/
  animation-iteration-count: infinite;  /*动画播放的次数*/
  animation-duration: 5s; /*动画所花费的时间*/
}
.photo image {
  width: 180rpx;
  height: 180rpx;
  margin-top: 40rpx;
}
.photo text {
  color: #fff;
  line-height: 10rpx;
}

@keyframes scaleDraw {  /*定义关键帧、scaleDrew是需要绑定到选择器的关键帧名称*/
  0%{
      transform: scale(1);  /*开始为原始大小*/
  }
  25%{
      transform: scale(1.1); /*放大1.1倍*/
  }
  50%{
      transform: scale(1);
  }
  75%{
      transform: scale(1.1);
  }
}
.panel {
  float: right;
}
